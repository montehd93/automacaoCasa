<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tcc.TelaInicial" >

    <Button
        android:id="@+id/btlampadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Lâmpadas" />

    <Button
        android:id="@+id/btbanheiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btventilador"
        android:layout_alignRight="@+id/btventilador"
        android:layout_below="@+id/btventilador"
        android:layout_marginTop="124dp"
        android:text="Banheiro" />

    <Button
        android:id="@+id/btventilador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btlampadas"
        android:layout_alignRight="@+id/btlampadas"
        android:layout_below="@+id/btlampadas"
        android:text="Ventilador" />

    <CheckBox
        android:id="@+id/portao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btventilador"
        android:layout_alignRight="@+id/btventilador"
        android:layout_below="@+id/btventilador"
        android:layout_marginTop="35dp"
        android:checked="true"
        android:text="Portão da Garagem"
        android:textSize="25sp" />

</RelativeLayout>